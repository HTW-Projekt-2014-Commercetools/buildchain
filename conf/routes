# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Page dat shit
GET        /                    @controllers.PagingController.showProducts
GET        /products            @controllers.PagingController.getProducts(page: Int, size: Int)

# Model & Matching
#GET 	/offers/ 				@controllers.Offers.index
#POST	/offers/				@controllers.Offers.addOffer
#GET     /offers/list			@controllers.Offers.getOffers

GET     /demands/add 			@controllers.DemandController.form
POST	/demands/add			@controllers.DemandController.addDemand
GET 	/demands/list			@controllers.DemandController.getDemands


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
